<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myapplication2.add"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aggiungi Password"
        android:textColor="#ff6afa13"
        android:textSize="35sp"
        android:singleLine="false"
        android:password="false"
        android:phoneNumber="false"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sito"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#f8000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome Utente"
            android:id="@+id/showlog"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:id="@+id/showpass"
            android:layout_row="2"
            android:layout_column="0"
            android:singleLine="false"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/sito"
            android:layout_row="0"
            android:layout_column="3"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/nome_utente"
            android:layout_row="1"
            android:layout_column="3"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_row="4"
            android:layout_column="3"
            android:textColor="#ff000000"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/create"
            android:layout_row="2"
            android:layout_column="3"
            android:baselineAlignBottom="true"
            android:clickable="false"
            android:layout_gravity="bottom|right"
            android:background="@drawable/key3"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrizione"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_row="2"
            android:layout_column="3"
            android:textColor="#ff000000" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/fine"
            android:textColor="#ffffffff"
            android:background="@drawable/button_back"
            android:layout_centerVertical="true"

            android:layout_row="5"
            android:layout_column="0"
            />

        <Button
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:id="@+id/send"
            android:layout_row="5"
            android:layout_column="3"
            android:background="@drawable/button_add"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="5"
            android:layout_column="4"></LinearLayout>


    </GridLayout>

</RelativeLayout>
